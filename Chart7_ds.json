{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "background": {"signal": "null"},
    "padding": 5,
    "width": 700,
    "height": 700,
    "title": {
      "text": "Dead Sea surface area (km2) since 1930",
      "subtitle": "1930-2016. Source: ISRAMAR (2016)",
      "fontSize": 13,
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "white",
      "subtitleColor": "white"
    },
    "style": "cell",
    "data": [
      {
        "name": "source_0",
        "url": "https://raw.githubusercontent.com/avivsaban/avivsaban.github.io/main/deadsea_tidy%20(3).csv",
        "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","},
        "transform": [
          {
            "field": "Year",
            "type": "timeunit",
            "units": ["year"],
            "as": ["year_Year", "year_Year_end"]
          },
          {
            "type": "aggregate",
            "groupby": ["year_Year"],
            "ops": ["sum"],
            "fields": ["Value"],
            "as": ["sum_Value"]
          }
        ]
      }
    ],
    "marks": [
      {
        "name": "marks",
        "type": "area",
        "style": ["area"],
        "sort": {"field": "datum[\"year_Year\"]"},
        "from": {"data": "source_0"},
        "encode": {
          "update": {
            "orient": {"value": "vertical"},
            "fill": {"value": "#AEC6CF"},
            "description": {
              "signal": "\"Year: \" + (timeFormat(datum[\"year_Year\"], '%Y')) + \"; Surface area (km2): \" + (format(datum[\"sum_Value\"], \"\"))"
            },
            "x": {"scale": "x", "field": "year_Year"},
            "y": {"scale": "y", "field": "sum_Value"},
            "y2": {"scale": "y", "value": 0},
            "defined": {
              "signal": "isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]) && isValid(datum[\"sum_Value\"]) && isFinite(+datum[\"sum_Value\"])"
            }
          }
        }
      }
    ],
    "scales": [
      {
        "name": "x",
        "type": "time",
        "domain": {"data": "source_0", "field": "year_Year"},
        "range": [0, {"signal": "width"}]
      },
      {
        "name": "y",
        "type": "linear",
        "domain": {"data": "source_0", "field": "sum_Value"},
        "range": [{"signal": "height"}, 0],
        "nice": true,
        "zero": true
      }
    ],
    "axes": [
      {
        "scale": "x",
        "orient": "bottom",
        "grid": false,
        "title": "Year",
        "format": "%Y",
        "labelFlush": true,
        "labelOverlap": true,
        "labelColor": "white",
        "titleColor": "white",
        "tickCount": {"signal": "ceil(width/40)"},
        "zindex": 0
      },
      {
        "scale": "y",
        "orient": "left",
        "grid": false,
        "title": "Surface area (km2)",
        "labelOverlap": true,
        "labelColor": "white",
        "titleColor": "white",
        "tickCount": {"signal": "ceil(height/40)"},
        "zindex": 0
      }
    ]
  }
