{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "background": {"signal": "null"},
    "padding": 5,
    "width": 700,
    "height": 700,
    "autosize": "fit",
    "title": {
      "text": "IMF lending outstanding relative to global GDP ",
      "subtitle": "Credit outstanding to all members, SDRs (%), Source: IMF and World Bank",
      "subtitleFontStyle": "Graphik",
      "subtitleFontSize": 20,
      "anchor": "start",
      "textColor":"white",
      "subtitleColor": "white",
      "color": "white"
      
    },
    "style": "cell",
    "data": [
      {
        "name": "source_0",
        "url": "https://raw.githubusercontent.com/avivsaban/avivsaban.github.io/main/chart4data.csv",
        "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","},
        "transform": [
          {
            "type": "filter",
            "expr": "(isDate(datum[\"Year\"]) || (isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]))) && isValid(datum[\"Credit_to_GDP_(%)\"]) && isFinite(+datum[\"Credit_to_GDP_(%)\"])"
          }
        ]
      }
    ],
    "marks": [
      {
        "name": "marks",
        "type": "rect",
        "style": ["bar"],
        "from": {"data": "source_0"},
        "encode": {
          "update": {
            "fill": {"value": "#FFEAB2"},
            "ariaRoleDescription": {"value": "bar"},
            "description": {
              "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y')) + \"; Credit_to_GDP_(%): \" + (format(datum[\"Credit_to_GDP_(%)\"], \"\"))"
            },
            "xc": {"scale": "x", "field": "Year"},
            "width": {"value": 5},
            "y": {"scale": "y", "field": "Credit_to_GDP_(%)"},
            "y2": {"scale": "y", "value": 0}
          }
        }
      }
    ],
    "scales": [
      {
        "name": "x",
        "type": "time",
        "domain": {"data": "source_0", "field": "Year"},
        "range": [0, {"signal": "width"}],
        "padding": 5
      },
      {
        "name": "y",
        "type": "linear",
        "domain": {"data": "source_0", "field": "Credit_to_GDP_(%)"},
        "range": [{"signal": "height"}, 0],
        "nice": true,
        "zero": true
      }
    ],
    "axes": [
      {
        "scale": "x",
        "orient": "bottom",
        "grid": null,
        "labelAngle": 45,
        "ticks": false,
        "labelAlign": "left",
        "labelColor": "white",
        "labelBaseline": "top",
        "labelFlush": true,
        "labelOverlap": true,
        "tickCount": {"signal": "ceil(width/40)"},
        "zindex": 0
      },
      {
        "scale": "y",
        "orient": "left",
        "grid": null,
        "labelOverlap": true,
        "labelColor": "white",
        "tickCount": {"signal": "ceil(height/40)"},
        "zindex": 0
      }
    ]
  }
